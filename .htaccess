Options -MultiViews
RewriteEngine On

# --- Allow API requests to pass through ---
RewriteRule ^api/ - [L]

# --- Serve existing files normally ---
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# --- React SPA fallback ---
RewriteRule ^ index.html [L]
