Options -MultiViews
RewriteEngine On
RewriteBase /

# --- DO NOT rewrite API requests ---
RewriteCond %{REQUEST_URI} ^/api [NC]
RewriteRule .* - [L]

# --- DO NOT rewrite real files or directories ---
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule .* - [L]

# --- SPA fallback ---
RewriteRule .* index.html [L]
